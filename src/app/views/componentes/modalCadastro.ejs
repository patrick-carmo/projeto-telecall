<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title fs-5 titulo-modal">
          <%= paginaLogin ? 'Cadastrar' : 'Alterar Cadastro' %>
        </h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form
          action="<%= paginaLogin ? '/cadastrar' : '/alterar' %>"
          method="post"
          class="needs-validation formulario-principal"
          id="<%= paginaLogin ? 'formulario-cadastro' : 'formulario-alterar' %>"
          novalidate
        >
          <input type="hidden" name="tipo" class="tipo" value="<%= paginaLogin ? 'cadastrar' : 'alterar' %>" />
          <div class="cadastro">
            <div class="form-floating modal-input">
              <input
                type="text"
                class="form-control input-cadastro"
                id="nome"
                name="nome"
                placeholder="Nome"
              />
              <label for="nome">Nome</label>
              <p class="invalid-feedback">Campo inválido!</p>
            </div>
            <div class="form-floating">
              <input
                type="date"
                class="form-control personalizado input-cadastro"
                id="nascimento"
                name="nascimento"
                placeholder="Data de nascimento"
              />
              <label for="nascimento">Data de nascimento</label>
              <p class="invalid-feedback">Campo inválido!</p>

            </div>

            <select
              class="form-select form-select-sm form-control input-cadastro"
              aria-label="Small select example"
              id="sexo"
              name="sexo"
            >
              <option selected>Sexo</option>
              <option value="Masculino">Masculino</option>
              <option value="Feminino">Feminino</option>
              <option value="Outro">Outro</option>
            </select>

            <div class="form-floating modal-input">
              <input
                type="text"
                class="form-control input-cadastro"
                id="nomeMaterno"
                name="nomeMaterno"
                placeholder=""
              />
              <label for="nomeMaterno">Nome materno</label>
              <p class="invalid-feedback">Campo inválido!</p>
            </div>
            <div class="form-floating modal-input">
              <input
                type="text"
                class="form-control input-cadastro"
                id="cpf"
                name="cpf"
                placeholder=""
                <%= paginaLogin ? '' : 'disabled' %>
              />
              <label for="cpf">CPF</label>
              <p class="invalid-feedback">Campo inválido!</p>
            </div>
            <div class="form-floating">
              <input
                type="tel"
                class="form-control input-cadastro"
                id="celular"
                name="celular"
                placeholder=""
                minlength="19"
              />
              <label for="celular">Telefone Celular</label>
              <p class="invalid-feedback">Campo inválido!</p>
            </div>
            <div class="form-floating">
              <input
                type="tel"
                class="form-control input-cadastro"
                id="fixo"
                name="fixo"
                placeholder=""
              />
              <label for="fixo">Telefone Fixo</label>
              <p class="invalid-feedback">Campo inválido!</p>
            </div>
            <div class="form-floating modal-input">
              <input
                type="text"
                class="form-control input-cadastro"
                id="login"
                name="login"
                placeholder=""
              />
              <label for="login">Login</label>
              <p class="invalid-feedback">Campo inválido!</p>
            </div>
            <div class="form-floating div-password">
              <input
                type="password"
                class="form-control input-cadastro"
                id="senha"
                name="senha"
                placeholder="Senha"
                pattern="^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"
              />
              <label for="senha">Senha</label>
              <i class="bi bi-eye-fill btn-senha"></i>
              <p class="invalid-feedback senha-invalida">Obrigatório: Letra maiúscula e caracter especial!</p>
              <p class="feedback-senha">Senhas não idênticas</p>
            </div>
            <div class="form-floating">
              <input
                type="password"
                class="form-control input-cadastro"
                id="senha2"
                placeholder="Senha"
                pattern="^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"
              />
              <label for="senha2">Confirmar Senha</label>
              <i class="bi bi-eye-fill btn-senha"></i>
              <p class="invalid-feedback senha-invalida">Obrigatório: Letra maiúscula e caracter especial!</p>
              <p class="feedback-senha">Senhas não idênticas</p>
            </div>
          </div>

          <div class="form-endereco">
            <div class="form-floating">
              <input
                type="text"
                class="form-control input-cadastro"
                id="cep"
                name="cep"
                placeholder="cep"
              />
              <label for="cep">CEP <span class="obrigatorio">*</span></label>
              <p class="invalid-feedback">Campo inválido!</p>
            </div>
            <div class="form-floating input-oculto">
              <input
                type="text"
                class="form-control input-cadastro"
                id="uf"
                name="uf"
                placeholder="Estado"
                disabled
              />
              <label for="uf">Estado</label>
              <p class="invalid-feedback">Campo inválido!</p>

            </div>
            <div class="form-floating input-oculto">
              <input
                type="text"
                class="form-control input-cadastro"
                id="bairro"
                name="bairro"
                placeholder="Bairro"
                disabled
              />
              <label for="bairro">Bairro</label>
              <p class="invalid-feedback">Campo inválido!</p>

            </div>
            <div class="form-floating input-oculto">
              <input
                type="text"
                class="form-control input-cadastro"
                id="localidade"
                name="localidade"
                placeholder="Cidade"
                disabled
              />
              <label for="localidade">Cidade</label>
              <p class="invalid-feedback">Campo inválido!</p>

            </div>
            <div class="form-floating input-oculto">
              <input
                type="text"
                class="form-control input-cadastro"
                id="logradouro"
                name="logradouro"
                placeholder="Logradouro"
                disabled
              />
              <label for="logradouro">Logradouro</label>
              <p class="invalid-feedback">Campo inválido!</p>

            </div>
            <div class="form-floating input-oculto">
              <input
                type="text"
                class="form-control input-cadastro"
                id="complemento"
                name="complemento"
                placeholder="Complemento"
              />
              <label for="complemento">Numero <span class="obrigatorio">*</span></label>
              <p class="invalid-feedback">Campo inválido!</p>

            </div>
            <div class="form-floating input-oculto modal-input">
              <input
                type="text"
                class="form-control input-cadastro"
                id="complementoAdicional"
                name="complementoAdicional"
                placeholder="Complemento"
              />
              <label for="complementoAdicional">Complemento</label>
              <p class="invalid-feedback">Campo inválido!</p>

            </div>
          </div>
          <div class="botao-formulario">
            <button type="submit" class="btn btn-primary estilo-botao" id="enviar-cadastro">
              <%= paginaLogin ? 'Cadastrar' : 'Alterar Cadastro' %>
            </button>

            <button
              type="<%= paginaLogin ? 'reset' : 'button' %>"
              class="btn btn-secondary estilo-botao botao-limpar"
              <%= paginaLogin ? '' : 'id=pegarDados' %>
            >
              Limpar
            </button>
          </div>
          <p id="erroCadastro"></p>
        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="form-anterior btn btn-secondary estilo-botao" disabled>
          Cadastro
        </button>

        <button type="button" class="btn btn-secondary botao-fechar" data-bs-dismiss="modal">
          Fechar
        </button>

        <button type="button" class="form-proximo btn btn-secondary estilo-botao">Endereço</button>
      </div>
    </div>
  </div>
</div>
